@page "/Link"
@page "/link/{LinkCode}"
@using CryptoLink.WebUI.Client.Services
@using Microsoft.AspNetCore.Authorization
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

@attribute [AllowAnonymous]
@inject LinksService LinksService
@inject NavigationManager Navigation


<PageTitle>Wczytywanie Linku</PageTitle>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3>Obsługa Linku</h3>
        </div>
        <div class="card-body">

            @if (IsLoading)
            {
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>

                    @if (!string.IsNullOrEmpty(RedirectMessage))
                    {
                        <h4 class="mt-3 text-success">@RedirectMessage</h4>
                        <p>Zostaniesz przeniesiony automatycznie.</p>
                    }
                    else
                    {
                        <p class="mt-2">Pobieranie danych linku...</p>
                    }
                </div>
            }
            else if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger">
                    <h4>Błąd!</h4>
                    <p>@ErrorMessage</p>
                    <button class="btn btn-secondary" @onclick="ResetState">Powrót do strony</button>
                </div>
            }
        </div>
    </div>
</div>